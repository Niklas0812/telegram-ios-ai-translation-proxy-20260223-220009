{
  "server": {
    "bind_host": "0.0.0.0",
    "port": 8080,
    "system_prompt_file": "server/system_prompt.txt"
  },
  "openrouter": {
    "model": "moonshotai/kimi-k2.5",
    "base_url": "https://openrouter.ai/api/v1/chat/completions",
    "request_timeout_seconds": 15,
    "disable_reasoning": true
  },
  "logging": {
    "level": "INFO",
    "file": "server/server.log"
  }
}
